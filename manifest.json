{
  "name": "Salesforce inspector",
  "description": "Adds a buttons to show data and metadata details on Salesforce standard details pages.",
  "version": "0.3.0",
  "permissions": [
    "https://*.salesforce.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*"],
      "css": ["data/chromePopup.css", "data/showStdPageDetails.css"],
      "js": ["data/chromePopup.js", "data/showAllDataForRecordPopup.js", "data/showStdPageDetails.js"]
    }
  ],
  "manifest_version": 2
}

