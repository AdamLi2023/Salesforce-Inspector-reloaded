{
  "name": "Salesforce inspector",
  "description": "Productivity tools for Salesforce administrators and developers to inspect data and metadata directly from the Salesforce UI.",
  "version": "0.10",
  "icons": {
    "128": "icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "jid1-DBcuAQpfLMcvOQ@jetpack",
      "strict_min_version": "46.0"
    }
  },
  "permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*", "https://*.visual.force.com/*", "https://*.lightning.force.com/*"],
      "all_frames": true,
      "css": [
        "button.css",
        "inspect-inline.css"
      ],
      "js": [
        "inspector.js",
        "button.js",
        "inspect-inline.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'none'",
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "popup.html",
    "data-export.html",
    "data-import.html",
    "inspect.html",
    "explore-api.html",
    "open-field-setup.html",
    "open-object-setup.html"
  ],
  "incognito": "split",
  "manifest_version": 2
}

